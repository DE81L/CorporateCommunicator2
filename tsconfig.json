{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "rootDir": "./",
    "outDir": "./build",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["client/src/*"],
      "@shared/*": ["shared/electron-shared/*"]
    }
  },
  "include": ["server/**/*", "shared/**/*"],
  "exclude": ["node_modules", "dist"]
}
