{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@shared/*": ["../shared/electron-shared/*"]
    },
    "moduleResolution": "bundler",
    "types": ["vite/client"],
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "include": ["src", "vite-env.d.ts"],
  "exclude": ["../shared/electron-shared/**/*.ts"]
}
