{
  "compilerOptions": {
    "target": "ES2020",
    "baseUrl": ".",
    "paths": { "@shared/*": ["../shared/electron-shared/*"] },
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "../dist-electron",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./**/*.ts", "../shared/electron-shared/**/*.ts"],
  "exclude": ["node_modules"]
}
