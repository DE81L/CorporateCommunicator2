{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "../electron-dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": ["../node_modules/@types", "../types"]
  },
  "include": ["*.ts"]
}